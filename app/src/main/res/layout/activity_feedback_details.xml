<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.guoyu.fusemanagerapp.page.FeedbackDetailsActivity">

    <RelativeLayout
        style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_top_back" />

        </RelativeLayout>

        <TextView
            android:text="咨询反馈详情"
            style="@style/tv_top_title" />

    </RelativeLayout>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/white_ffffff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/gl_img0013x" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_img"
                        android:text="李先生"
                        android:textColor="#333333"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_name"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_img"
                        android:text="2019/09/02 10:40:58"
                        android:textColor="#CCCCCC"
                        android:textSize="9sp" />
                </RelativeLayout>

                <TextView
                    android:layout_marginBottom="30dp"
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="23dp"
                    android:layout_marginTop="18dp"
                    android:text="进入新时代,双鸭山市紧扣转型发展主线,抢抓全面振兴全方位振兴发展机遇,做好三篇大文章,做实四头四尾,实现了由一煤独大？"
                    android:textColor="#333333"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:background="@color/white_ffffff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="23dp"
                    android:text="反馈意见"
                    android:textColor="#010101"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_fk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="22dp"
                    android:text="双鸭山市紧扣转型发展主线，抢抓全面振兴全方位振兴，和发展机遇，做好三篇大文章"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginRight="17dp"
                        android:id="@+id/tv_name_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:text="2019/09/02 10:40:58由:张秘书反馈"
                        android:textColor="#777777"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_sure"
        android:background="#D62424"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="17sp"
        android:textColor="@color/white_ffffff"
        android:text="点击反馈"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</LinearLayout>
