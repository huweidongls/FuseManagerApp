<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.guoyu.fusemanagerapp.page.FuwenbenActivity">

    <RelativeLayout
        style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_top_back" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pic"
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/white_ffffff"
                android:text="+ 插入图片"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

    <com.sendtion.xrichtext.RichTextEditor
        android:id="@+id/et_new_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:rt_editor_text_line_space="6dp"
        app:rt_editor_image_height="500"
        app:rt_editor_image_bottom="10"
        app:rt_editor_text_init_hint="在这里输入内容"
        app:rt_editor_text_size="16sp"
        app:rt_editor_text_color="@color/black_333333"/>
    
    <TextView
        android:id="@+id/tv_save"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/white_ffffff"
        android:background="@color/theme"
        android:text="保存"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</LinearLayout>
